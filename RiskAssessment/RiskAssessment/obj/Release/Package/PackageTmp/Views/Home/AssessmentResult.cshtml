    <div class="container">
        @for (int i = 0; i < Model.RiskList.Count; i++)
        {

            <button class="collapsible">
                @Html.Raw(Model.RiskList[i].RiskName)
            </button>
            <div class="content">
                <p>@Html.Raw(Model.RiskList[i].RiskStatement)</p>

